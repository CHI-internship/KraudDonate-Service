generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int      @default(autoincrement()) @id
  email      String   @unique
  name       String
  lastname   String
  role       Role     @default(customer)
  photo      String?
  orders     Order[]
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Admin {
  id         Int      @default(autoincrement()) @id
  email      String   @unique
  name       String
  lastname   String
  photo      String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Order {
  id              Int      @default(autoincrement()) @id
  title           String
  info            String
  user            User     @relation(fields: [user_id], references: [id])
  user_id         Int
  photo           String
  goal_amount     Float
  sum             Float
  short_info      String
  finished_at     DateTime
  status          Status   @default(open)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

enum Role {
  customer
  volunteer
}

enum Status {
  open
  closed
}