generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String
  lastname  String
  role      Role     @default(customer)
  photo     String?
  orders    Order[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  volunteer Volunteer?
}

model Admin {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String
  lastname  String
  photo     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Order {
  id          Int      @id @default(autoincrement())
  title       String
  info        String
  user        User     @relation(fields: [user_id], references: [id])
  user_id     Int
  photo       String
  goal_amount Float
  sum         Float    @default(0)
  short_info  String
  finished_at DateTime
  status      Status   @default(open)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Volunteer {
  id          Int      @id @default(autoincrement())
  country     String
  city        String
  card_number String
  document    String
  user        User @relation(fields: [userId], references: [id])
  userId      Int  @unique
  status      Boolean?
}

enum Role {
  customer
  volunteer
}

enum Status {
  open
  closed
}
